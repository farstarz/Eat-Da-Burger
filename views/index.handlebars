<h1 class= "header">Eat-Da-Burger!</h1>
<h2 class="label">Available Burgers!</h2>
<div class="container">
    <div class="row">
        <div class="col-md-6 notdevoured">    
            <ul>
                {{#each burgers}}

                    {{#unless devoured }}
                        <li>
                            {{burger_name}}
    
                            <button class="devouver" data-id={{id}} data-burger={{burger_name}} data-devoured={{devoured}}>Devouver Me!</button>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6 devoured">    
            <ul>
                {{#each burgers}}
                    {{#if devoured }}
                        <li>
                            {{burger_name}}
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<h2>Add another burger</h2>
<form class="create-form">
    <div class="form-group">
        <label for="bg">Burger Name:</label>
        <input type="text" id="bg" name="name">
    </div>
    <button type="submit">Add Burger</button>
</form>